---
import "@fontsource/titillium-web";

import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout>
  <a href="#main" class="skip-link">Skip to main content</a>
  <Nav />
  <main id="main" class="flex-grow flex items-center justify-center">
    <h1 class="text-3xl font-bold underline">Hello world!</h1>
  </main>
</Layout>
<style>
  /* Reset some default browser styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 100%; /* This sets the base font size to 16px */
  }

  body {
    font-family: "Titillium Web", sans-serif;
    line-height: 1.6; /* Set a comfortable line-height */
    color: #333; /* Default text color */
    background-color: #f7fafc; /* Light gray background for the entire page */
  }
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: #fff;
    color: #007bff;
    padding: 8px;
    z-index: 100;
    transition: top 0.3s;
  }
  .skip-link:focus {
    top: 0;
  }
</style>
